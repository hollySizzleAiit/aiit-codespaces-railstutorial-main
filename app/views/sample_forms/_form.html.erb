<%= form_with(model: sample_form) do |form| %>
  <div class="form_wrap">
    <% if sample_form.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(sample_form.errors.count, "error") %> prohibited this sample_form from being saved:</h2>

        <ul>
          <% sample_form.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form_column_wrap">
      <%= form.label :text, "テキスト入力欄", style: "display: block" %>
      <%= form.text_field :text %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :password, "パスワード入力欄", style: "display: block" %>
      <%= form.password_field :password %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :search, "検索入力欄", style: "display: block" %>
      <%= form.search_field :search %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :tel, "電話番号入力欄", style: "display: block" %>
      <%= form.telephone_field :tel %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :url, "URL入力欄", style: "display: block" %>
      <%= form.url_field :url %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :email, "メールアドレス入力欄", style: "display: block" %>
      <%= form.email_field :email %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :number, "数値入力欄", style: "display: block" %>
      <%= form.number_field :number %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :range, "範囲スライダー入力", style: "display: block" %>
      <%= form.range_field :range %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :color, "カラー（色選択）入力", style: "display: block" %>
      <%= form.color_field :color %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :date, "日付入力欄", style: "display: block" %>
      <%= form.date_field :date %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :datetime_local, "日付と時刻入力欄（ローカル）", style: "display: block" %>
      <%= form.datetime_local_field :datetime_local %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :month, "月入力欄", style: "display: block" %>
      <%= form.month_field :month %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :week, "週入力欄", style: "display: block" %>
      <%= form.week_field :week %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :time, "時刻入力欄", style: "display: block" %>
      <%= form.time_field :time %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :checkbox, "チェックボックス", style: "display: block" %>
      <%= form.check_box :checkbox %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :radio, "ラジオボタン", style: "display: block" %>
      <%# ラジオボタンは通常、複数の選択肢から1つを選ぶために使われます %>
      <%# ここでは例として "Option 1" と "Option 2" を用意します %>
      <%= form.radio_button :radio, "option1", class: "form_column_wrap" %>
      <%= form.label :radio_option1, "Option 1" %>
      <%= form.radio_button :radio, "option2", class: "form_column_wrap" %>
      <%= form.label :radio_option2, "Option 2" %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :file, "ファイル選択ボックス", style: "display: block" %>
      <%= form.file_field :file %>
    </div>

    <div>
      <%# hiddenフィールドは通常ラベルを表示しません %>
      <%= form.hidden_field :hidden %>
    </div>

    <div>
      <%= form.submit %>
    </div>


    <div class="form_column_wrap">
      <%= form.label :reset_button, "リセットボタン", style: "display: block" %>
      <%= button_tag "Reset Form", type: :reset %>
    </div>

    <div class="form_column_wrap">
      <%= form.label :generic_button, "汎用ボタン", style: "display: block" %>
      <%= form.button "Generic Button", type: "button" %>
    </div>
  </div>
<% end %>

<style>
  .form_column_wrap {
    margin-top: 15px;
  }
  .form_wrap {
    margin: 20px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
  }
</style>
